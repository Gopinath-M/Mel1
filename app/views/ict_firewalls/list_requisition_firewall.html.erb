<%if !request.xhr?%>

  <div class="CenterNav">
    <h2 class="b-head"><%=t('labels.resource_req_ict_facility')%></h2>
    <div class="create-user">
      <div class="form-sec-row">
        <label class="text"><%=t('left_nav.agency')%></label>
        <span class="in-box">
          <%= select(:transfer_from,:agency_requisition,  Agency.active.collect {|agency| [agency.name, agency.id]},:prompt=>"Select Agency") %>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text"><%=t('labels.department')%></label>
        <span class="in-box">
          <%= select(:list_department,:id_requisition, Department.active.where("agency_id =?", params[:agency]).collect {|p| [ p.name, p.id ] },:prompt => "Select Department") %>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text"><%=t('labels.user')%></label>
        <%=hidden_field_tag :username %>
        <span class="in-box">
          <%= select(:list, :username_requisition4, Department.active.where("agency_id =?", params[:agency]).collect {|p| [ p.name, p.id ] },:prompt => "Select User") %>
        </span>
      </div>
    </div>

    <div class="manage-user box">
    <%end%>
    <div id="div_ajax" >
      <%if @ict_firewalls && !@ict_firewalls.empty?%>
        <%@ict_firewalls.each do |resource|%>
          <div class="manage-user box">
            <div class="manage-user-rows box">
              <div class="m-c1"><b><%=t('labels.name')%></b>
              </div>
              <div class="m-c-second">
                <%= User.find(resource.user_id).username   %>
              </div>
              <div class="m-c3">
                <% if resource.status == "New"%><b><font color='#FFA500'><%= "#{resource.status}" %></font></b><% elsif resource.status == "Approved" || resource.status == "Processed"  %>  <b><font color='#329C20'><%= "#{resource.status}" %> </font></b><% elsif resource.status == "Declined" || resource.status == "Returned"  %>  <b><font color='red'><%= "#{resource.status}" %> </font></b><% end %>
              </div>
            </div>
            <div class="clear"></div>

            <div class="manage-user-rows box">
              <div class="m-c1"><b><%=t('labels.type_of_facility')%></b>
              </div>
              <div class="m-c-second">
                <% name = RequisitionType.find_by_id(resource.requisition_type_id) %>
                <%=name.name%>
              </div>
              <div class="m-c3">               
              </div>
            </div>
            <div class="clear"></div>

            <div class="manage-user-rows box">
              <div class="m-c1"><b><%=t('labels.ticket_no')%></b>
              </div>
              <div class="m-c-second">
                <font color="red"><b>&nbsp;<%=resource.id%>/<%=Time.now.year%></b></font>
              </div>
              <div class="m-c3">
                <b><font color="#336699"><%= link_to t('labels.show_info'),ict_firewall_path(:id => resource.id), :method=>:get%></font></b>
              </div>
            </div>
            <div class="clear"></div>

            <div class="manage-user-rows box">
              <div class="m-c1"><b><%=t('labels.date_of_app')%></b>
              </div>
              <div class="m-c-second">
                &nbsp;<%= resource.created_at.strftime("%d-%m-%Y %H:%M %p")%></font>
              </div>
              <div class="m-c3">
              </div>
            </div>
            <div class="clear"></div>

          </div>
          <h2 class="b-head"></h2>

        <%end%> <div class="manage-user-rows box"><br/><br/>
  <%#= paginate @requisition %></div>
        <%else%>
          <%=t('labels.no_data_available')%>
        <%end%>
    </div>
    <%if !request.xhr?%>
    </div>
  </div>
<%end%>


