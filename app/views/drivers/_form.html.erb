<%= form_for(@driver) do |f| %>
  <div class="form-sec">
    <%=f.error_messages%>
    <div class="clearfix">&nbsp;</div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.name')%><span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :name, :rows=>2, :autofocus => true%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.tel_no')%><span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :telephone_number, :rows=>2, :autofocus => true%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit :class=>"btn2", :value=>@driver.new_record? ? t('labels.create') : t('labels.update')%>
      </span>
    </div>
  </div>
<%end%>