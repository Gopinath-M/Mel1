<div class="CenterNav">
<%= form_for(@property_file,  :url => declaration_property_users_path, :html => {:multipart => true}, :method=>:post) do |f| %>
  <div class="form-sec">
    <%=f.error_messages%>
    <div class="clearfix">&nbsp;</div>
   <table><tr><td><b><font color="#858585">Step 1 -></font></b></td><td><font color="#858585">Step 2-></font></td><td><font color="#858585">Step 3-></font></td><td><h4><b><font color="#336699">Step 4-></font></b></h4></td><td><font color="#858585">Step 5</font></td></tr></table>
    <h2>Declaration Property</h2>

    <%= hidden_field_tag :user_id,current_user.id %>


    <div class="form-sec-row">
      <label class="text">Year <span style=color:red>*</span></label>
      <span class="in-box">
        <%= select_year(Date.today, :start_year => 2010, :end_year => 2020)%>
      </span>
    </div>


    <div class="form-sec-row">
      <label class="text">Upload File<span style=color:red></span></label>
      <span class="in-box">
        <%=f.file_field :property_file %>
      </span>
    </div>

    <div class="form-sec-row">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit :class=>"btn2",:value=>'Create'%>
      </span>
    </div>

  </div>
<%end%>
<%i =1%>
  <div class="form-sec-row"><label class="text">S.No</label>
  <label class="text">File Name</label>
  <label class="text">Year</label>
  </div>
<div class="form-sec-row">
<%@property_file = DeclarationProperty.find_all_by_user_id(current_user.id)%>
<%if @property_file %>
<%@property_file.each do |file| %>
                    <label class="text"><%=i%></label>
                    <% image = file.property_file.url(:profile).split(".").last %>
                   <%=file.property_year%>
                      <span class="in-box">

           <% file_url = (file.property_file).url.split("/").last %>
            <b>&nbsp;<%= link_to file_url, download_attachments_users_path(:id=>file.id) if file.property_file  %></b>
          <%#*<b><%= link_to 'Download File', download_attachments_users_path(:id=>file.id) if file.property_file  %>

                      </span>
                    <%i=i+1%>
                  <%end%>
  <%end%>
</div>
</div>