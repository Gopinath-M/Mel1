<div class="clearfix"></div>
<div class="CenterNav">
    <h2 class="b-head">Account Settings</h2>
  <div class="form-sec">
    <%= form_for(@user, :as => :user,  :url => update_account_setting_users_path, :method=>:post) do |f| %>
      <!--BODY START-->

      <div class="form-sec-row">
        <%= f.check_box :profile_status %>
        <%= f.label :profile_status, raw('Profile Status'), :class=>"text" %>
        <i class="state_abbr">(Please Check if your Profile Status as Private)</i>
      </div>
      <div class="form-sec-row">
        <%= f.check_box :widget_one %>
        <%= f.label :widget_one, raw('Weather Widget'), :class=>"text" %>
      </div>
      <div class="form-sec-row">
        <%= f.check_box :widget_two %>
        <%= f.label :widget_two, raw('Prayer Widget'), :class=>"text" %>
      </div>
 <%= hidden_field_tag :user_id, (current_user.id)%>

      <div class="form-sec-row">
        <label class="text">&nbsp;</label>
        <span class="in-box">
          <%= f.submit :class=>"btn2"%>
        </span>
      </div>

    <%end%>
  </div>
</div>