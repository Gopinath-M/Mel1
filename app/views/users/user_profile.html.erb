<div class="clearfix"></div>
<div class="CenterNav">
  <div class="form-sec">
    <%= form_for(@users, :url => user_profile_users_path(:id=>@users.id), :html => { :method => :put, :multipart => true }) do |f| %>
      <%=f.error_messages%>
      <div class="clearfix">&nbsp;</div>
      <h2>Update User Profile</h2>
      <div class="form-sec-row">
      <div class="stepsblock">
                    	<ul>
                            <li class="step1 active" title="Step 1">Step 1</li>
                            <li class="divider"></li>
                            <li class="step2" title="Step 2">Step 2</li>
                            <li class="divider"></li>
                            <li class="step3" title="Step 3">Step 3</li>
                            <li class="divider"></li>
                            <li class="step4" title="Step 4">Step 4</li>
                            <li class="divider"></li>
                            <li class="step5" title="Step 5">Step 5</li>
                        </ul>
                    </div>
 </div></div> <div class="clearfix">&nbsp;</div>
      
      <div class="form-sec-row">
        <label class="text"><%=t('labels.name')%> <span style=color:red>*</span></label>
        <span class="in-box">
          <%= f.text_field :username, :size => 30, :autofocus => true%>
        </span>
      </div>
     <div class="form-sec-row">
        <%= f.label :ic_number,t('labels.ic_no'), :class=>"text"%>
        <span class="in-box">
          <%= @users.ic_number%>
        </span>
      </div>
      <div class="form-sec-row">
        <%= f.label :marital_status,t('labels.marital_status'), :class=>"text"%>
        <span class="in-box">
          <%= f.radio_button :marital_status, 'Single', :checked=>@users && @users.marital_status=='Single' ? true : false%> <%= f.label :marital_status, t('labels.single') %>
           <%= f.radio_button :marital_status, 'Married', :checked=>@users && @users.marital_status=='Married' ? true : false%> <%= f.label :marital_status, t('labels.married') %>
           <%= f.radio_button :marital_status, 'Widow', :checked=>@users && @users.marital_status=='Widow' ? true : false%> <%= f.label :marital_status, t('labels.widow/widower') %></span>
      </div>
      <div class="form-sec-row">
        <%= f.label :gender,t('labels.gender'), :class=>"text"%>
        <span class="in-box">
      <%= f.radio_button :gender, 'Male', :checked=>@users && (@users.gender=='Male' || @users.gender.blank?) ? true : false%> <%= f.label :gender, t('labels.male') %>
      <%= f.radio_button :gender, 'Female', :checked=>@users && @users.gender=='Female' ? true : false%> <%= f.label :gender, t('labels.female') %>
         
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text"><%=t('labels.address')%> <span style=color:red>*</span></label>
        <%#= f.label :address,raw("Address <span style=color:red>*</span>"), :class=>"text"%>
        <span class="in-box">
          <%= f.text_field :address, :size => 30, :autofocus => true%>
        </span>
      </div>
       <div class="form-sec-row">
         <label class="text"><%=t('labels.zipcode')%> <span style=color:red>*</span></label>
        <%#= f.label :zipcode,raw("Post Code<span style=color:red>*</span>"), :class=>"text"%>
        <span class="in-box">
          <%= f.text_field :zipcode, :autofocus => true, :onkeypress=>"return isNumberKey(event);"%></span>
       </div>
       <div class="form-sec-row">

         <label class="text"><%=t('labels.city')%> <span style=color:red>*</span></label>
          <%#= f.label :city,raw("City<span style=color:red>*</span>"), :class=>"text"%>
          <span class="in-box"> <%= f.text_field :city, :size => 30, :autofocus => true%>
        </span>
        
      </div>
           <div class="form-sec-row">
        <label class="text"><%=t('labels.state')%> <span style=color:red>*</span></label>
        <span class="in-box">
          <%= f.select(:state, State.all.collect {|p| [p.name.upcase, p.id]} ,:prompt => "Select State")%>
        </span>
      </div>
      <div class="form-sec-row">

        <label class="text"><%=t('labels.hp_num')%> <span style=color:red>*</span></label>
      <%#= f.label :hp_number,raw("HP Number<span style=color:red>*</span>"), :class=>"text"%>
      <span class="in-box">
        <%= f.text_field :hp_number, :onkeypress=>"return isNumberKey(event);", :size => 30, :autofocus => true%>
      </span>
    </div>
 <div class="form-sec-row">
        <label class="text"><%=t('labels.dob')%> <span style=color:red>*</span></label>
        <span class="in-box">
          <%=f.text_field :date_of_birth ,:value=>@users && @users.date_of_birth!=nil ? @users.date_of_birth.strftime("%d-%m-%Y") : nil ,:readonly=>true%>
        </span>
      </div>
      <h2>Dependent</h2>
       <div class="form-sec-row-out">
         <label class="text"><%=t('labels.total_children_dependent')%> <span style=color:red>*</span></label>
        <%#= f.label :child,raw("Total Children/Dependent <span style=color:red>*</span>"), :class=>"text"%>
        <span class="in-boxx">
          <%= f.text_field :child, :autofocus => true, :onkeypress=>"return isNumberKey(event);", :class=>'size-quan-box-ict' %><%=t('labels.persons')%>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text">&nbsp;</label>
        <span class="in-box">
          <%= f.submit t('labels.update_profile') ,:class=>"btn2"%>
        </span>
      </div>
    </div>
  </div>
  <%#*</div>%>
  <div class="clear"></div>
  <!--BODY END-->
<%end%>


<div class="clearfix"></div>
