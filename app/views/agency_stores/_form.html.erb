<%= form_for(@store) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <div class="form-sec-row">
      <label class="text">Resource Type <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.radio_button :resource_type, 'ict'%> <%= f.label :resource_type, "ICT" %>
        <%= f.radio_button :resource_type, 'transport'%> <%= f.label :resource_type, "Transport" %>
        <%= f.radio_button :resource_type, 'room_booking'%> <%= f.label :resource_type, "Room Booking" %>
        <%= f.radio_button :resource_type, 'others' ,:checked=>true%> <%= f.label :resource_type, "Others" %>
      </span>
    </div>
  <div class="form-sec-row">
    <%= label_tag :agency_id, raw("Agency <span style=color:red>*</span>"), :class=>"text" %>
    <span class="in-box">

        <%= f.select(:agency_id,  Agency.active.collect {|agency| [agency.name, agency.id]},:prompt=>"SELECT AN AGENCY") %>

    </span>
  </div>
  <div class="form-sec-row">
        <label class="text">Select Category <span style=color:red>*</span></label>
        <span class="in-box">
          
            <%=select("category","id", options_from_collection_for_select(Category.active.all, 'id','name'),{:prompt=>"SELECT A CATEGORY"})%>
        
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text">Select Sub Category<span style=color:red>*</span></label>
        <span class="in-box">
         
            <%=select("sub_category","id", options_from_collection_for_select(SubCategory.active.all, 'id','name'),{:prompt=>"SELECT A SUB CATEGORY"})%>
          
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text">Resource<span style=color:red>*</span></label>
        <span class="in-box">
          <%= f.select(:resource_id, Resource.active.collect {|category| [category.resource_no, category.id]},:prompt=>"SELECT A RESOURCE") %>
        </span>
      </div>
  <div id="agency_others">
      <div class="form-sec-row">
      <label class="text">Quantity <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :quantity%>
      </span>
    </div>
    <%#*<div class="dynamic-form">%>
      <%#*<div class="form-sec-row"><a href="#" id="add">Add</a> | <a href="#" id="remove">Remove</a> | <a href="#" id="reset">Reset</a></div>%>
  
      <%#*<div class="inputs"><div class="form-sec-row"> <label class="text">Serial No</label></div>%>
        <%#*<div class="form-sec-row-center"><input type="text" name=text1 size ="29" class="field"/></div>%>
      <%#*</div>%>
    <%#*</div>%>
    <div class="form-sec-row">
      <label class="text">UOM <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :uom%>
      </span>
    </div>
  </div>


  <div class="form-sec-row">
    <label class="text">&nbsp;</label>
    <span class="in-box">
      <%= f.submit :class=>"btn2"%>
    </span>
  </div>



  

<%end%>
