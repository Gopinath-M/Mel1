<%if !request.xhr?%>
  <div class="CenterNav">
    <h2 class="b-head"><%=t('labels.manage_category')%></h2>
    <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. </p>
    <div class="create-user">
      <div class="cu-c1"><a href="/categories/new" title="<%=t('labels.create_category')%>"><img src="../images/add_user.jpg" width="17" height="16" alt="img" /><%=t('labels.create_category')%></a></div>
      
    </div>
  <%end%>

    <div id="div_ajax" >
      <%if @categories && !@categories.empty?%>
        <%@categories.each do |category|%>
          <div class="manage-user box">
            <div class="manage-user-row box">
              <div class="mu-c1">
              </div>
              <div class="mu-c2">
                <p class="head1"><%=category.name%></p>
              </div>
              <div class="mu-c3">
                <%= link_to image_tag("../images/edit.jpg",:width=>"14",:height=>"14",:alt=>"img") +t('labels.edit'), :action=>'edit', :id=>category.id.to_i%>
                <%if category.is_active %>
                  <%= link_to image_tag("../images/deactive.jpg",:width=>"14",:height=>"14",:alt=>"img") +t('labels.deactivate'), update_status_categories_path(:id=>category.id, :status=>"Deactivate"), :confirm => t('labels.category_deact_confirm'), :method=>:post, :title=>t('labels.deactivate') %>
                <%else%>
                  <%= link_to  image_tag("../images/active.jpg",:width=>"14",:height=>"14",:alt=>"img") +t('labels.activate'),  update_status_categories_path(:id=>category.id,:status=>"Activate"), :confirm => t('labels.category_act_confirm'), :method=>:post, :title=>t('labels.activate')%>
                <%end%>

              </div>
            </div>
            <div class="clear"></div>
          </div>
        <%end%><div class="manage-user-rows box"><br/><br/>
        <%= paginate @categories %></div>
      <%else%>
       <%=t('labels.no_data_available')%>
      <%end%>
  <%#*<div><%= paginate @units %>
    </div>

</div>
