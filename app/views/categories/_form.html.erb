<%= form_for(@category) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <div class="form-sec">
    <%= hidden_field_tag  :created_by, (current_user.id)%>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.category_name')%><span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :name%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.is_active')%></label>
      <span class="in-box">
        <%= f.check_box :is_active%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit :class=>"btn2", :value=>@category.new_record? ? t('labels.create') : t('labels.update')%>
      </span>
    </div>
  </div>

<%end%>
