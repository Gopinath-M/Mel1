
<div id="software_new_selection_id_<%= params[:val]%>">
  <div class="form-sec-row">
    <label class="text">Software Name<span style=color:red>*</span></label>
    <span class="in-box">
      <%= select("service_detail", "software", FacilityIctSoftware.find(:all,:conditions=>["is_active = true"]).collect {|facility_software| [facility_software.name, facility_software.id]},:prompt=>"SELECT A SOFTWARE") %>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text">Name<span style=color:red>*</span></label>
    <span class="in-box">
      <%#= text_field "service" "#{params[:val]}", "name"%>
      <%= text_field "service_detail", "name"%></span>
  </div>
  <div class="form-sec-row">
    <label class="text">Position<span style=color:red>*</span></label>
    <span class="in-box">

      <%= text_field "service_detail", 'position'%>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text">Grade<span style=color:red>*</span></label>
    <span class="in-box">

      <%=  text_field "service_detail", 'grade'%></span>
  </div>

  <a onclick= 'delete_boxes(<%= params[:val]%>)' ><b>Delete</b></a>
</div>

<script type="text/javascript">
  
  function delete_boxes(id){  	  	
  	$("#software_new_selection_id_"+id).hide();
  	$("#software_new_selection_id_"+id).attr('id','first6');
  	decre = parseInt($("#total_service_count").val());
  	value = decre - 1;
  	$("#total_service_count").val(value);
  }
</script>