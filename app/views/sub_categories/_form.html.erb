<%= form_for(@sub_category) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <div class="form-sec">
    <div class="form-sec-row">
      <label class="text"><%=t('labels.category_name')%> <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.select(:category_id,  Category.active.collect {|category| [category.name, category.id]},:prompt=>"Select Category") %>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.sub_category_name')%> <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :name%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.is_active')%></label>
      <span class="in-box">
        <%= f.check_box :is_active%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit :class=>"btn2", :value=>@sub_category.new_record? ? t('labels.create') : t('labels.update')%>
      </span>
    </div>
  </div>
<%end%>
