<div class="CenterNav">
<%= form_for(@vendor_store, :url => vendor_store_vendors_path) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <h2 class="b-head"><%=t('labels.create_vendor_store')%></h2>
  <div class="form-sec">
    <div class="form-sec-row">
<label class="text"><%=t("dashboard.vendors")%><span style=color:red>*</span></label>
        <%#= label_tag :vendor_id, raw("Vendor <span style=color:red>*</span>"), :class=>"text" %>
        <span class="in-box">
          <%= select(:vendor_store,:id,  Vendor.active.collect {|vendor| [vendor.name, vendor.id]},:selected=>@user,:prompt=>"Select Vendor") %>
        </span>
      </div>
    <div class="form-sec-row">
<label class="text"><%=t("left_nav.category_name")%><span style=color:red>*</span></label>
      <%#= label_tag :category_id, raw("Category <span style=color:red>*</span>"), :class=>"text"%>
      <span class="in-box">
        <%= select(:categories,:id, Category.active.collect {|p| [ p.name, p.id ] },:prompt => "Select Category") %>
      </span>
    </div>
    <div class="form-sec-row">
<label class="text"><%=t("left_nav.sub_category_name")%><span style=color:red>*</span></label>
      <%#= label_tag :sub_category, raw("Sub Category <span style=color:red>*</span>"), :class=>"text"%>
      <span class="in-box">
        <%= select(:sub_category,:id, SubCategory.where("category_id =?", params[:agency]).collect {|p| [ p.name, p.id ] },:prompt => "Select Sub Category") %>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('left_nav.resource')%> <span style=color:red>*</span></label>
      <span class="in-box">
        <%= select("resource","id",  Resource.where("sub_category_id =?", params[:resources]).collect {|sub_category| [sub_category.name, sub_category.id]},:prompt=>"Select Resource") %>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.quantity')%> <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :quantity%>
      </span>
    </div>

<div class="dynamic-form">
  <div class="form-sec-row"><a href="#" id="add"><%=t('labels.add')%></a> | <a href="#" id="remove"><%=t('labels.remove')%></a> | <a href="#" id="reset"><%=t('labels.reset')%></a></div>
