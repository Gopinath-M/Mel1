<div class="inputs"><div class="mu-c1"></div>
<div class="form-sec-row-center"><input type="text" name1 ="text" name=text1 size ="29" class="field"/></div>
</div>
<%#*<input name="submit" type="button" class="submit" value="Submit"/>%>
<%#*</form>%>
</div>
    <div class="form-sec-row">
      <label class="text">UOM</label>
      <span class="in-box">
        <%= f.text_field :uom%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit t('labels.save'), :class=>"btn2"%>
      </span>
    </div>
  </div>

<%end%>
  </div>
