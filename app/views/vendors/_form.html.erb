<%= form_for(@vendor) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <div class="form-sec">
    <div class="form-sec-row">
      <label class="text"><%=t('labels.vendor_name')%> <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :name%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.email')%></label>
      <span class="in-box">
        <%= f.text_field :email%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.address')%> <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :address%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.contact_number')%> <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :contact_no%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.remarks')%></label>
      <span class="in-box">
        <%= f.text_field :remarks%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.is_active')%></label>
      <span class="in-box">
        <%= f.check_box :is_active%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit :class=>"btn2", :value=>@vendor.new_record? ? t('labels.create') : t('labels.update')%>
      </span>
    </div>
  </div>

<%end%>
