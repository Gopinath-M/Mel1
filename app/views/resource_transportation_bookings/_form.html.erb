<%= form_for(@resource_transportation_booking, :as => :resource_transportation_booking,  :url => resource_transportation_bookings_path, :method=>:post) do |f| %>
  <div class="form-sec">
    <%=f.error_messages%>
    <div class="clearfix">&nbsp;</div>
    <div class="form-sec-row">
      <label class="text">Select Category Name<span style=color:red>*</span></label>
      <span class="in-box">
        <%if !@resource_transportation_booking.new_record?%>
          <%resource= @resource_transportation_booking if @resource_transportation_booking && !@resource_transportation_booking.blank?%>
          <%category=resource.category%>
          <%=select("category","id", options_from_collection_for_select(Category.all, 'id','name',category.id),{:prompt=>"SELECT A CATEGORY"})%>
        <%else%>
          <%=select("category","id", options_from_collection_for_select(Category.all, 'id','name'),{:prompt=>"SELECT A CATEGORY"})%>
        <%end%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">Sub Category Name<span style=color:red>*</span></label>
      <span class="in-box">
        <%if !@resource_transportation_booking.new_record?%>
          <%resource= @resource_transportation_booking if @resource_transportation_booking && !@resource_transportation_booking.blank?%>
          <%sub_category=resource.sub_category%>
          <%=select("sub_category","id", options_from_collection_for_select(SubCategory.all, 'id','name',sub_category.id),{:prompt=>"SELECT A SUB CATEGORY"})%>
        <%else%>
          <%=select("sub_category","id", options_from_collection_for_select(SubCategory.all, 'id','name'),{:prompt=>"SELECT A SUB CATEGORY"})%>
        <%end%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">Resource<span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.select(:resource_id, Resource.active.collect {|category| [category.name, category.id]},:prompt=>"SELECT A RESOURCE") %>
      </span>
    </div>
    <div class="form-sec-row">
      <%= f.label :Purpose,raw("Purpose"), :class=>"text"%>
      <span class="in-box">
        <%= f.text_field :purpose, :rows=>2, :autofocus => true%>
      </span>
    </div>
    <div class="form-sec-row">
      <%= f.label :Pick_up_place,raw("Pick up Place"), :class=>"text"%>
      <span class="in-box">
        <%= f.text_field :pick_up_place, :size => 30, :autofocus => true%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">From Date<span style=color:red>*</span></label>
      <span class="in-box">
        <%=f.text_field :requested_from_date ,:value=>@resource_transportation_booking && @resource_transportation_booking.requested_from_date!=nil ? @resource_booking.requested_from_date.strftime("%d-%m-%Y") : nil ,:readonly=>true%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">To Date<span style=color:red>*</span></label>
      <span class="in-box">
        <%=f.text_field :requested_to_date,:value=>@resource_transportation_booking && @resource_transportation_booking.requested_to_date!=nil ? @resource_booking.requested_to_date.strftime("%d-%m-%Y") : nil ,:readonly=>true%>
      </span>
    </div>
    <div class="form-sec-row">
      <%= f.label :state,raw("Destination State"), :class=>"text"%>
      <span class="in-box">
        <%= f.select(:state,options_from_collection_for_select(State.all, 'id','name' ), :prompt => "SELECT YOUR STATE")%>
      </span>
    </div>
    <div class="form-sec-row">
      <%= f.label :location,raw("Destination Location"), :class=>"text"%>
      <span class="in-box">
        <%= f.text_area :location, :rows=>2, :autofocus => true %>
      </span>
    </div>
    <div class="form-sec-row">
      <%= f.label :number_of_passengers ,raw("Number of Passengers"), :class=>"text"%>
      <span class="in-box">
        <%= f.text_field :number_of_passengers, :autofocus => true%>
      </span>
    </div>
    <div class="form-sec-row">
      <%= f.label :remarks,raw("Remarks"), :class=>"text"%>
      <span class="in-box">
        <%= f.text_area :remarks, :rows=>2, :autofocus => true%>
      </span>
    </div>

    <div class="form-sec-row">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit :class=>"btn2"%>
      </span>
    </div>
  </div>
  <div class="clear"></div>
<%end%>

