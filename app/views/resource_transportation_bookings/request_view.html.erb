			<#% if !a.blank? %>
			<td>
			<%#= select("vehicle","id", options_from_collection_for_select(Resource.find(:all,:conditions=>["id in (#{a})"]),'id',"resource_no"),{:prompt=>"SELECT A BRAND"})%>
			</td>
			<%#end%>
