             <tr>
            <td><b><%=t('labels.attachment')%></b></td><% file = (@resource_transportation_booking.attachment).url(:profile).split("/").last %>
            <td>&nbsp;<b><%= link_to file, download_attachments_resource_transportation_bookings_path(:id=>@resource_transportation_booking.id) if @resource_transportation_booking.attachment?  %></b></td>
