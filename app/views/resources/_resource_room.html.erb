<%= form_for(@resource) do |f| %>


  <div class="form-sec-row">
    <label class="text"><%=t('labels.resource_sub_category')%><span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.select(:sub_category_id,  SubCategory.where("category_id = 6").active.collect {|category| [category.name, category.id]},:prompt=>"Select Sub Category") %>
    </span>
  </div>

  <%= hidden_field_tag :resource_type, ("room_booking") %>

  <div class="form-sec-row">
    <label class="text"><%=t('labels.room_name')%><span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.text_field :resource_no, :onkeypress=>"return isModifiedNumberKey(event);",:size => 10%>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text"><%=t('labels.location')%><span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.text_field :location%>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text"><%=t('labels.capacity')%><span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.text_field :capacity%>
    </span>
  </div>
  <%#*<div class="form-sec-row">%>
    <%#*<label class="text"><%=t('labels.is_return')%></label>
    <%#*<span class="in-box">%>
      <%#= f.check_box :is_returnable%>
    <%#*</span>%>
  <%#*</div>%>
  <%#*<div class="form-sec-row">%>
    <%#*<label class="text"><%=t('labels.avail_facility')%></label>
    <%#*<span class="in-box">%>
      <%#= f.check_box :is_facilty_avail%>
    <%#*</span>%>
  <%#*</div>%>


  <div class="form-sec-row">
    <label class="text">&nbsp;</label>
    <span class="in-box">
      <%= f.submit :class=>"btn2", :id=>"resource_room_submit", :value=>@resource.new_record? ? t('labels.create') : t('labels.update')%>
      <%#= f.submit :class=>"btn2", :id=>"resource_room_submit", :value=>t('labels.create')%>
    </span>
  </div>
<%end%>
