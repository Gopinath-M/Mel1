      <%#= f.check_box :is_facilty_avail%>
    <%#*</span>%>
  <%#*</div>%>


  <div class="form-sec-row">
    <label class="text">&nbsp;</label>
    <span class="in-box">
      <%= f.submit :class=>"btn2", :id=>"resource_transport_submit", :value=>@resource.new_record? ? t('labels.create') : t('labels.update')%>
      <%#= f.submit :class=>"btn2", :id=>"resource_transport_submit", :value=>'Create'%>
    </span>
