    <span class="in-box">
      <%= f.text_field :vehicle_model, :size => 10%>
  <%#= select(:vehicle,:id,  Vehicle.order.collect {|vehicle| [vehicle.registration_number, vehicle.id]},:selected=>@user,:prompt=>"SELECT VEHICLE") %>
