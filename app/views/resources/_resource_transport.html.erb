<%= form_for(@resource) do |f| %>


  <div class="form-sec-row">
    <label class="text"><%=t('labels.resource_sub_category')%><span style=color:red>*</span></label>
    <span class="in-box">
       <%= select("resource_transport","sub_category_id",  options_from_collection_for_select(SubCategory.where("category_id = 7").active, 'id','name',@resource.sub_category_id ),:prompt=>"Select Sub Category") %>
    </span>
  </div>
  
    <div class="form-sec-row">
    <label class="text">Vehicle Brand<span style=color:red>*</span></label>
    <span class="in-box">
       <%= select("resource_transport","vehicle_model_type_id",  options_from_collection_for_select(VehicleModelType.where("sub_category_id = ?",@resource.sub_category_id).active, 'id','name',@resource.vehicle_model_type_id ),:prompt=>"Select Vehicle Brand") %>
    </span>
  </div>
  
  <%= hidden_field_tag :resource_type, ("transport") %>

  <div class="form-sec-row">
