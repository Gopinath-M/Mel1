<div class="clearfix"></div>
<div class="CenterNav">
  <div class="form-sec">
    <h2 class="b-head">Create  User</h2>
    <%= form_for(@user, :as => :user,  :url => department_users_path, :method=>:post) do |f| %>
      <%=f.error_messages%>
      <div class="clearfix">&nbsp;</div>
      <div class="form-sec-row">
        <%= f.label :first_name,raw("First Name"), :class=>"text"%>
        <span class="in-box">
          <%= f.text_field :first_name, :size => 30%>
        </span>
      </div>
      <div class="form-sec-row">
        <%= f.label :last_name,raw("Last Name"), :class=>"text"%>
        <span class="in-box">
          <%= f.text_field :last_name, :size => 30%>
        </span>
      </div>
      <div class="form-sec-row">
        <%= f.label :email,raw("Email"), :class=>"text"%>
        <span class="in-box">
          <%= f.text_field :email, :size => 30%>
        </span>
      </div>
      <div class="form-sec-row">
        <%= f.label :ic_number,raw("IC Number"), :class=>"text"%>
        <span class="in-box">
          <%= f.text_field :ic_number, :size => 30%>
        </span>
      </div>
      <div class="form-sec-row">
        <%= f.label :avatar,raw("Avatar"), :class=>"text"%>
        <span class="in-box">
          <%= f.file_field :avatar%>
        </span>
      </div>
      <div class="form-sec-row">
        <%= f.label :username,raw("User Name"), :class=>"text"%>
        <span class="in-box">
          <%= f.text_field :username, :size => 30%>
        </span>
      </div>
      <div class="form-sec-row">
        <%= f.label :city,raw("City"), :class=>"text"%>
        <span class="in-box">
          <%= f.text_field :city, :size => 30%>
        </span>
      </div>

      <div class="form-sec-row">
        <%= f.label :state,raw("State"), :class=>"text"%>
        <span class="in-box">
          <%= f.select(:state, State.all.collect {|p| [p.name.upcase, p.id]} ,:prompt => "SELECT YOUR STATE")%>
        </span>
      </div>
      <div class="form-sec-row">
        <%= f.label :zipcode,raw("Zipcode"), :class=>"text"%>
        <span class="in-box">
          <%= f.text_field :zipcode, :size => 30%>
        </span>
      </div>
      <div class="form-sec-row">
        <%= f.label :department_id,raw("Department"), :class=>"text"%>
        <span class="in-box">
          <%=f.select(:department_id, Department.all.collect {|p| [ p.name, p.id ] },:prompt => "SELECT YOUR DEPARTMENT ") %>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text">Is Admin</label>
        <span class="in-box">
          <span class="ui-watermark-container ui-watermark-input">
            <label for="" class="ui-watermark-label" style="left: 6px; top: 6px;"></label>
            <%= f.check_box :is_admin %>
          </span>
        </span>
      </div>

      <div class="form-sec-row">
        <label class="text">&nbsp;</label>
        <span class="in-box">
          <%= f.submit :class=>"btn2"%>
        </span>
      </div>
      <div class="clear"></div>
      <!--BODY END-->
    <%end%>
  </div>
</div>