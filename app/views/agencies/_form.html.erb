<%= form_for(@agency) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <div class="form-sec">
    <div class="form-sec-row">
      <label class="text"><%=t('labels.agency_name')%><span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :name%>
      </span>
    </div>
     <div class="form-sec-row">
      <label class="text"><%=t('labels.address')%><span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_area :address, :rows => 5 %>
      </span>
    </div>
     <div class="form-sec-row">
      <label class="text"><%=t('labels.tel_no')%><span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :telephone_number%>
      </span>
    </div>
     <div class="form-sec-row">
      <label class="text"><%=t('labels.fax_no')%><span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :fax_number%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.is_active')%></label>
      <span class="in-box">
        <%= f.check_box :is_active%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit :class=>"btn2", :value=>@agency.new_record? ? t('labels.create') : t('labels.update')%>
      </span>
    </div>
  </div>
<%end%>
