<div class="clearfix"></div>
<div class="CenterNav">
  <div class="form-sec">
    <h2 class="b-head"><%=t('labels.assign_resource_manager')%></h2>
    <%= form_for(@role_membership, :url => update_assign_resource_manager_agencies_path) do |f| %>
     <%=f.error_messages%>
      <div class="create-user">
        <div class="form-sec-row">
          <label class="text"><%=t('labels.agency')%><span style=color:red>*</span></label>
          <span class="in-box">
            <%=f.select(:agency,  options_from_collection_for_select(Agency.active, 'id','name', @role_membership.agency),:prompt=>"Select Agency") %>
          </span>
        </div>
        <div class="form-sec-row">
          <label class="text"><%=t('labels.department')%><span style=color:red>*</span></label>
          <span class="in-box">
            <%= f.select(:department_id, Department.active.where("agency_id =?", params[:agency]).collect {|p| [ p.name, p.id ] },:prompt => "Select Department") %>
          </span>
        </div>
        <div class="form-sec-row">
          <label class="text"><%=t('labels.user')%><span style=color:red>*</span></label>
          <span class="in-box">
            <%= f.select(:user_id, Department.active.where("agency_id =?", params[:agency]).collect {|p| [ p.name, p.id ] },:prompt => "Select User") %>
          </span>
        </div>
        <div class="form-sec-row">
          <label class="text">&nbsp;</label>
          <span class="in-box"><br/>
            <%= f.submit t('labels.assign_resource_manager'), :class=>"btn2"%>
          </span>
        </div>
      </div>
    <%end%>
  </div>
</div>