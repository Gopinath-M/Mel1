<%= form_for(@complaint_building_asset, :html => { :method => :post, :multipart => true }) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <div class="form-sec">
  </div>
  <br/>
  <div class="form-sec-row">
    <label class="text"><%=t('left_nav.category')%><span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.select(:building_asset_type_id, BuildingAssetType.where("parent_type_id=?", 0).collect {|p| [ p.name, p.id] },:prompt => "Select Category", :style=> "width:132%;") %>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text"><%=t('labels.type')%><span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.select(:type_id, BuildingAssetType.where("parent_type_id=?", params[:building_asset_type_id]).collect {|p| [ p.name, p.id, p.parent_type_id]  },:prompt => "Select Type", :style=> "width:132%;") %>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text"><%=t('labels.item')%><span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.select(:item_id, BuildingAssetType.where("parent_type_id=?", params[:type_id]).collect {|p| [ p.name, p.id ] },:prompt => "Select Item", :style=> "width:132%;") %>
    </span>
  </div>

  <div class="form-sec-row">
    <label class="text"><%=t('labels.location')%> <span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.text_field :location%>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text"><%=t('labels.serial_no')%> <span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.text_field :serial_no%>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text"><%=t('labels.reason')%></label>
    <span class="in-box">
      <%= f.text_area :reason, :rows =>4%></span>
    <div>
    </div>
  </div>
  <div class="form-sec-row">
    <div class="CenterNav">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit :class=>"btn2", :value=>@complaint_building_asset.new_record? ? t('labels.create') : t('labels.update')%>
      </span>
    </div>
  </div>
<%end%>
