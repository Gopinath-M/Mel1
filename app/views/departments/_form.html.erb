<%= form_for(@department) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <div class="form-sec-row">
    <label class="text"><%=t('left_nav.agency')%> <span style=color:red>*</span></label>
    <span class="in-box">
      <%if @department.name%>
        <%agency_name = Agency.find(@department.agency_id)%>
        <%= f.select(:agency_id,  options_from_collection_for_select(Agency.active, 'id','name',agency_name.id ),:prompt=>"Select Agency") %>
      <%else%>
        <%= f.select(:agency_id,  Agency.active.collect {|agency| [agency.name, agency.id]},:prompt=>"Select Agency") %>
      <%end%>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text"><%=t('labels.create_department')%> <span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.text_field :name%>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text"><%=t('labels.address')%><span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.text_field :address %>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text"><%=t('labels.tel_no')%><span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.text_field :telephone_number%>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text"><%=t('labels.fax_no')%></label>
    <span class="in-box">
      <%= f.text_field :fax_number%>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text"><%=t('labels.is_active')%></label>
    <span class="in-box">
      <%= f.check_box :is_active %>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text">&nbsp;</label>
    <span class="in-box"><%= f.submit :class=>"btn2", :value=>@department.new_record? ? t('labels.create') : t('labels.update')%></span>
  </div>
<%end%>
