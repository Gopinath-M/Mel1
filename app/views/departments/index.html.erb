<div class="CenterNav">
  <h2 class="b-head">Manage Departments</h2>
  <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. </p>
   <div class="create-user">
    <div class="cu-c1"><a href="/departments/new" title="Create Department"><img src="../images/add_user.jpg" width="17" height="16" alt="img" /> Create Department</a></div>


  </div><div style="width:520px;height:850px;overflow:auto;"> 
  <div class="manage-user box">
    <%@departments.each do |department|%>
   
    <div class="manage-user-row box">
      <div class="mu-c1">
        <a href="#" title="The Melaka  State Office of Land and Mines"><img src="../images/img_user1.jpg" alt="Image" width="60" height="60" /></a>
      </div>
     <div class="mu-c2">
        <p class="head1"><%= link_to "#{department.name}", :action=>'edit', :id=>department.id.to_i%></p>
      </div>
      
      <div class="mu-c3">
        <%if department.is_active %>
          <%= link_to image_tag("../images/deactive.jpg",:width=>"14",:height=>"14",:alt=>"img") +"Deactivate", department_path(department, :del=>"DA"), :method=>:put,%>
        <%else%>
          <%= link_to  image_tag("../images/active.jpg",:width=>"14",:height=>"14",:alt=>"img") +"Activate",  department_path(department, :del=>"A"), :method=>:put,%>
        <%end%>
        <%= link_to image_tag("../images/delete.jpg",:width=>"14",:height=>"14",:alt=>"img") +"Delete", department_path(department), :method=>:delete, :confirm => "Are you sure want to delete?" %>
      </div></div>

   <div class="clear"></div>
    <%end%></div></div>










  </div>
