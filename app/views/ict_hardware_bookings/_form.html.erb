<%= form_for(@ict_hardware_booking) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <div class="form-sec-row">
    <%= f.label :facility_ict_id, raw("Facility Type"), :class=>"text"%>
    <span class="in-box">
      <%=f.select(:facility_ict_id, options_from_collection_for_select(FacilityIct.active, 'id','name',@ict_hardware_booking.facility_ict_id ),:prompt=>"SELECT A HARDWARE")%>
    </span>
  </div>
  <div class="form-sec-row"><br/>
    <%= f.label :application_category,raw("Application Category"), :class=>"text"%>
    <span class="in-box">
      <%= f.radio_button :application_category, 'Individual', :checked=>@ict_hardware_booking && (@ict_hardware_booking.application_category=='Individual' || @ict_hardware_booking.application_category.blank?) ? true : false%> <%= f.label :application_category, "Individual" %>
      <%= f.radio_button :application_category, 'Group', :checked=>@ict_hardware_booking && @ict_hardware_booking.application_category=='Group' ? true : false%> <%= f.label :application_category, "Group" %>
    </span>
  </div>
  <%= f.fields_for :ict_hardware_booked_users do |builder| %>
    <%= render "ict_hardware_booked_user_fields", :f => builder %>
  <% end %>
  <div id="div_ict_hardware_add_more" style="display:none;"><%= link_to_add_fields "Add User", f, :ict_hardware_booked_users %></div>
  <div class="form-sec-row">
    <label class="text">&nbsp;</label>
    <span class="in-box"><%= f.submit  :class=>"btn2"%></span>
  </div>
  <div class="clear"></div>
<% end %>
