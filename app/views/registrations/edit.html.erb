<div class="clearfix"></div>
<div class="CenterNav">
  <div class="form-sec">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true }) do |f| %>
      <!--BODY START-->
  <%#*<div id="Body">%>
  <%#*<div class="form-page">%>
  <%#*<div class="">%>
      <%=f.error_messages%>
      <div class="clearfix">&nbsp;</div>
      <h2><%=t('labels.edit_my_profile')%></h2>
      <div class="form-sec-row">
        <label class="text"><%=t('labels.first_name')%><span style=color:red>*</span></label>
        <span class="in-box">
          <%= f.text_field :first_name, :size => 30, :autofocus => true%>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text"><%=t('labels.last_name')%><span style=color:red>*</span></label>
        <span class="in-box">
          <%= f.text_field :last_name, :size => 30, :autofocus => true%>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text"><%=t('labels.email')%><span style=color:red>*</span></label>
        <span class="in-box">
          <%= f.text_field :email, :size => 30, :autofocus => true%>
        </span>
      </div>

      <div class="form-sec-row">
        <label class="text"><%=t('labels.display_name')%><span style=color:red>*</span></label>
        <span class="in-box">
          <%= f.text_field :username, :size => 30, :autofocus => true%>
          <i><%=t('labels.site_display_name')%>)</i>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text"><%=t('labels.contact_number')%><span style=color:red>*</span></label>
        <span class="in-box">
          <%= f.text_field :contact_mobile, :size => 30, :autofocus => true%>
        </span>
      </div>
      <div class="form-sec-row">
        <%= f.label :ic_number,t('labels.ic_no'), :class=>"text"%>
        <span class="in-box">
          <%= resource.ic_number %>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text"><%=t('labels.city')%></label>
        <span class="in-box">
          <%= f.text_field :city, :size => 30, :autofocus => true%>
        </span>
      </div>

      <div class="form-sec-row">
        <label class="text"><%=t('labels.state')%><span style=color:red>*</span></label>
        <span class="in-box">
          <%= f.select(:state, options_for_select(State.all.collect {|p| [p.name.upcase, p.id]},resource.state) ,:prompt => "Select Your State")%>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text"><%=t('labels.zipcode')%><span style=color:red>*</span></label>
        <span class="in-box">
          <%= f.text_field :zipcode, :size => 5,:maxlength=>5, :autofocus => true%>
        </span>
      </div>

      <% if !resource.departments.empty? %>
        <%department = Department.find(@current_department)%>
        <div class="form-sec-row">
          <%= f.label :department_id,t('labels.department'), :class=>"text"%>
          <span class="in-box">
            <%=department.name%>
          </span>
        </div>
      <% end %>

      <div  class="form-sec-row">
        <%= f.label :avatar , t('labels.avatar'),:class=>"text"%>
        <span class="in-box">
          <%= image_tag(resource.avatar_url(:thumb)) if resource.avatar.url.present?%><%= label_tag(resource.avatar_url) if resource.avatar.url.present?%>
  <%#= image_tag(resource.avatar.url) if resource.avatar.url.present?%>
          <%= f.file_field :avatar, :class=>'passfiled'%>
          <%= f.hidden_field :avatar_cache %>
          <br/>
          <%= f.check_box :remove_avatar %>
          <%= f.label :remove_avatar, t('labels.remove_avatar') %>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text">&nbsp;</label>
        <span class="in-box">
          <%= f.submit t('labels.update_profile') ,:class=>"btn2"%>
        </span>
      </div>
    </div>
  </div>
  <%#*</div>%>
  <div class="clear"></div>
  <!--BODY END-->
<%end%>




<%#*</div>%>
<%#*</div>%>
<div class="clearfix"></div>
