<%= form_for(@vehicle_model_type) do |f| %>
 <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <div class="form-sec">
   <div class="form-sec-row">
    <label class="text">Select Sub Category<span style=color:red>*</span></label>
    <span class="in-box">
      <%=select("transport_agency","sub_category_id", options_from_collection_for_select(SubCategory.where("category_id = 7").active.all, 'id','name'),{:prompt=>"Select Sub Category"})%>
    </span>
  </div>
    <div class="form-sec-row">
      <label class="text">Vehicle Name <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :name%>
      </span>
    </div>
   
    
    <div class="form-sec-row">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit :class=>"btn2", :value=>@vehicle_model_type.new_record? ? "Create" : "Update"%>
      </span>
    </div>
  </div>

<%end%>