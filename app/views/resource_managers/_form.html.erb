<%= form_for(@resource) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <div class="form-sec">
    <div class="form-sec-row">
    <label class="text"><%=t('labels.agency')%><span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.select(:agency_id,  Agency.active.collect {|agency| [agency.name, agency.id]},:prompt=>"Select Agency") %>
    </span>
  </div>
      <div class="form-sec-row">
     <label class="text"><%=t('labels.resource_sub_category')%><span style=color:red>*</span></label>
      <span class="in-box">
       <%= select("resource","resource_id",  Resource.active.collect {|category| [category.name, category.id]},:prompt=>"Select Resource") %>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.quantity')%> <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :quantity%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text"><%=t('labels.serial_no')%></label>
      <span class="in-box">
        <%= f.text_field :serial_no%>
      </span>
    </div>
    
    <div class="form-sec-row">
      <label class="text"><%=t('labels.uom')%></label>
      <span class="in-box">
        <%= f.text_field :uom%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit t('labels.save'), :class=>"btn2"%>
      </span>
    </div>
  </div>

<%end%>
