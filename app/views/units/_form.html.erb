<%= form_for(@unit) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <div class="form-sec">
    <span class="in-box">
      <span class="ui-watermark-container ui-watermark-input">
        <label for="" class="ui-watermark-label" style="left: 6px; top: 6px;"></label>

        <div class="form-sec-row">
          <%= label_tag "id_agency", raw("Agency"), :class=>"text" %>
          <span class="in-box">
            <%= select("units","agency",  Agency.active.collect {|role| [role.name, role.id]},:prompt=>"PLEASE SELECT A AGENCY") %>
          </span>
        </div>
        
        <div class="form-sec-row">
          <%= f.label :department_id,raw("Department"), :class=>"text"%>
          <span class="in-box">
            <%=f.select(:department_id, Department.where("agency_id =?", params[:agency]).collect {|p| [ p.name, p.id ] },:prompt => "PLEASE SELECT DEPARTMENT") %>
          </span>
        </div>

        <div class="form-sec-row">
          <label class="text">Unit Name</label>
          <span class="in-box">
            <span class="ui-watermark-container ui-watermark-input">
              <label for="" class="ui-watermark-label" style="left: 6px; top: 6px;"></label>
              <%= f.text_field :name%>
            </span>
          </span>
        </div>

        <div class="form-sec-row">
          <label class="text">Is Active</label>
          <span class="in-box">
            <span class="ui-watermark-container ui-watermark-input">
              <label for="" class="ui-watermark-label" style="left: 6px; top: 6px;"></label>
              <%= f.check_box :is_active%>
            </span>
          </span>
        </div>

        <div class="form-sec-row">
          <label class="text">&nbsp;</label>
          <span class="in-box">
            <%= f.submit :class=>"btn2"%>
          </span>
        </div>
        </div>
      </span>
    </span>
  <%end%>
