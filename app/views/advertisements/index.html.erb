<%if !request.xhr?%>
  <div class="CenterNav">
    <h2 class="b-head">Advertisement Details</h2>
    <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. </p>
    <div class="create-user">
      <% if current_user.is_super_admin? %>
        <div class="cu-c1"><a href="/advertisements/new" title="Advertisements"><img src="../images/add_user.jpg" width="17" height="16" alt="img" /> Create an Advertisement</a></div>
      <%end%>
    </div>
  <%end%>
  <div id="div_ajax" >
    <%if @advertisements && !@advertisements.empty?%>
      <%@advertisements.each do |advertisement|%>
        <div class="manage-user box">
          <div class="manage-user-rows box">
            <div class="m-c1"><b>Advertisement ID</b>
            </div>
            <div class="m-c2">

              <font color="#BB0802"><b><%= advertisement.id%></b></font>
            </div>
            <div class="m-c3">
            </div>
          </div>

          <div class="clear"></div>
          <div class="manage-user-rows box">
            <div class="m-c1"><b>Web-site URL</b>
            </div>
            <div class="m-c2">

              <a href=<%= advertisement.web_link%>><b><%= advertisement.web_link%></b></a>
            </div>
            <div class="m-c3">
            </div>
          </div>
          <div class="clear"></div>


          <div class="manage-user-rows box">
            <div class="m-c1"><b>From Date</b>
            </div>
            <div class="m-c2">
              <%= advertisement.from_date.to_datetime.strftime("%a %d %b %Y %I:%M %p") if advertisement.from_date%>
            </div>
            <div class="m-c3">
            </div>
            <div class="clear"></div>
          </div>

          <div class="manage-user-rows box">
            <div class="m-c1"><b>To Date</b>
            </div>
            <div class="m-c2">
              <%= advertisement.to_date.to_datetime.strftime("%a %d %b %Y %I:%M %p") if advertisement.to_date%>
            </div>

            <div class="m-c3">
              <b><font color="#336699"><%= link_to "Show Info", advertisement_path(:id => advertisement.id), :method=>:get%></font></b>
            </div>


            <div class="clear"></div>
          </div>
        </div>
        <h2 class="b-head"></h2>

      <%end%>
      <div class="manage-user-rows box"><br/><br/>
        <%= paginate @advertisements %>
      </div>
    <%else%>
      No Events Available
    <%end%>
  </div>
</div>