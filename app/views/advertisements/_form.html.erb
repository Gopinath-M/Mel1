<%= form_for(@advertisement, :html => { :multipart => true }) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>

  <br/>
  <div class="form-sec-row">
    <label class="text">Web-site URL<span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.text_field :web_link%>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text">From Date<span style=color:red>*</span></label>
    <span class="in-box">
      <%=f.text_field :from_date, :value=>@advertisement && @advertisement.from_date!=nil ? @advertisement.from_date : nil ,:readonly=>true%></span>
  </div>
  <div class="form-sec-row">
    <label class="text">To Date<span style=color:red>*</span></label>
    <span class="in-box">
      <%=f.text_field :to_date, :value=>@advertisement && @advertisement.to_date!=nil ? @advertisement.to_date : nil ,:readonly=>true%>
    </span>
  </div>
  
  <div class="form-sec-row">
    <label class="text">Is Visible<span style=color:red>*</span></label>
    <span class="in-box">

      <%= f.radio_button :is_active, true, {:id => "radio_click"} %> <%= f.label :is_active, "Yes" %>
      <%= f.radio_button :is_active, false, {:id => "radio_click"} %> <%= f.label :is_active, "No"  %>
    </span>
  </div>
  <div class="form-sec-row">
    <label class="text">Upload File<span style=color:red>*</span></label>
    <span class="in-box">
      <%= f.file_field :advertisement_attachment%>
      <%= f.hidden_field :advertisement_attachment_cache %>
    </span>
  </div>
  <div class="form-sec-row">
    <div class="CenterNav">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit :class=>"btn2", :value=>@advertisement.new_record? ? "Submit" : "Submit"%>
      </span>
    </div>
  </div>
  <%#*</div>%>
<%end%>
