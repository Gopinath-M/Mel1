<%if !request.xhr?%>
  <div class="CenterNav">
    <h2 class="b-head">List of Advertisements</h2>
    <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. </p>
    <div class="create-user">
      <% if current_user.is_super_admin? %>
        <div class="cu-c1"><a href="/advertisements/new" title="Create Advertisement"><img src="../images/add_user.jpg" width="17" height="16" alt="img" /> Create Advertisement</a></div>
      <%end%>
    </div>
  <%end%>
  <div id="div_ajax" >
    <%if @advertisements && !@advertisements.empty?%>
      <%@advertisements.each do |advertisement|%>
        <div class="manage-user box">
          <div class="manage-user-row box">
            <div class="mu-c1">
            </div>
            <div class="mu-c2">
              <p class="head1"><a href=<%= advertisement.web_link%>><b><%= advertisement.web_link%></b></a></p>
            </div>
            <div class="mu-c3">
              <%= link_to image_tag("../images/edit.jpg",:width=>"14",:height=>"14",:alt=>"img") +"Edit", :action=>'edit', :id=>advertisement.id.to_i%>
              <%if advertisement.is_active %>
                <%= link_to image_tag("../images/deactive.jpg",:width=>"14",:height=>"14",:alt=>"img") +"Deactivate", update_status_advertisements_path(:id=>advertisement.id, :status=>"Deactivate"), :confirm => 'Do you want to really deactivate this Advertisement?', :method=>:post, :title=>"Deactive" %>
              <%else%>
                <%= link_to  image_tag("../images/active.jpg",:width=>"14",:height=>"14",:alt=>"img") +"Activate",  update_status_advertisements_path(:id=>advertisement.id,:status=>"Activate"), :confirm => 'Do you want to really Activate this Advertisement?', :method=>:post, :title=>"Activate"%>
              <%end%>

            </div>
          </div>

        </div>
      <%end%><div class="manage-user-rows box"><br/><br/>
        <%= paginate @advertisements %></div>
      <%else%>
      No Advertisements Available
    <%end%>

  </div>
</div>
