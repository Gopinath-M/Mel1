<%if !request.xhr?%>
  <div class="CenterNav">
    <h2 class="b-head"><%=t('labels.other_list')%></h2>
    
    
      
  <%end%>
  <div id="div_ajax" >
    <%if @resource_bookings && !@resource_bookings.empty?%>
      <%@resource_bookings.each do |resource|%>
        <div class="manage-user box">
          <div class="manage-user-row box">
            <div class="mu-c1">
            </div>
           <div class="mu-c2">
              <% resource_name = SubCategory.find_by_id(resource.sub_category_id)%>
              <% @user = User.find_by_id(resource.user_id) %>
              <p class="head1"><b><%=t('labels.name')%> :<%= @user.first_name%></b></p>
              <p class="head1"><b><%=t('labels.resource_name')%> :<%= resource_name.name%></b></p>
              <p class="head1"><b><%=t('labels.ticket_no')%> :<font color="#BB0802;">&nbsp;<%=resource.id%>/<%=Time.now.year%></font></b></p>
              <p class="head1"><b><%=t('labels.from_date')%>:<%= resource.requested_from_date.to_datetime.strftime("%d-%m-%Y %H:%M %p")%></b></p>
              <p class="head1"><b><%=t('labels.to_date')%>:<%= resource.requested_to_date.to_datetime.strftime("%d-%m-%Y %H:%M %p")%></b></p>
              <p class="head1"><b><%=t('labels.booked_date')%>:<%=resource.created_at.localtime.strftime("%d-%m-%Y %H:%M %p") %></b></p>
            </div>
             <div class="form-sec-row">
                   <%#*<span class="in-box btn2 in-btn2">%>
              <b><font color='#329C20'><%= "#{resource.status}" %></font></b>
                   <%#*</span>%>
            </div>

            <div class="form-sec-row">
              <% if resource.status == "Processed" && resource.user_id = current_user.id%>
                <div id="hide_check_box_<%= resource.id %>">
                  <% if !resource.user_returned_status? %>
                    <label class="text"> <%=t('labels.is_returnable')%>?</label>
                    <span class="in-box">
                      <%= check_box_tag "user_returned_status[#{resource.id}]","",false,:onchange=>"toreturnresource(this.id,#{resource.id})" %>
                    </span>
                  <%end%>
                </div>
              <%end%>
            </div>

            <div id="room_box_<%= resource.id %>" style="display:none;">
              <font color='#369'> <b><%= t('labels.res_returned_msg') %></b></font>
            </div>

            <% if resource.status == "Returned" || resource.user_returned_status?%>
              <font color='#369'> <b><%= t('labels.res_returned_msg') %></b></font>
            <%end%>
<%if !resource.priority_booking%>
            <div class="form-sec-row">
              <% if current_user.is_department_admin? || current_user.is_super_admin? %>
                <span class="in-box">
                  <%= link_to  t('labels.see_req_det') ,resource_booking_approval_resource_bookings_path(:id => resource.id), :class=>"btn2 in-btn2"%>
                </span>
              <%end%>
            </div>
<%end%>
            <div class="form-sec-row">
              <span class="in-box">
                <b><font color="#BB0802"><%= link_to t('labels.show_req'),resource_booking_path(:id => resource.id), :method=>:get%></font></b>
              </span>
            </div>
            <div class="mu-c3">
              <%= hidden_field_tag(:id, resource.id) %>
            </div>
          </div>
          <div class="clear"></div>
        </div>
      <%end%>
    <%else%>
      <%=t('labels.no_data_available')%>
    <%end%>
  </div>
</div>