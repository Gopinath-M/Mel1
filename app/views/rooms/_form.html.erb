<%= form_for(@room) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <div class="CenterNav">
    <div class="form-sec">
      <div class="form-sec-row">
        <label class="text"><%=t('labels.name')%><span style=color:red>*</span></label>
        <span class="in-box">
          <%= f.text_field :name, :size => 10%>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text"><%=t('labels.location')%><span style=color:red>*</span></label>
        <span class="in-box">
          <%= f.text_field :location%>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text"><%=t('labels.room_no')%><span style=color:red>*</span></label>
        <span class="in-box">
          <%= f.text_field :extension_no%>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text"><%=t('labels.is_active')%></label>
        <span class="in-box">
          <%= f.check_box :is_active%>
        </span>
      </div>
      <div class="form-sec-row">
        <label class="text">&nbsp;</label>
        <span class="in-box">
          <%= f.submit :value=>@room.new_record? ? t('labels.create') : t('labels.update'), :class=>"btn2"%>
        </span>
      </div>
    </div>
  </div>
<%end%>
